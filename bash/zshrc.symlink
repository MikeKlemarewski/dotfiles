# Make bash prompt pretty!

function get_repo_name() {
    basename `git rev-parse --show-toplevel`
}

function get_git_branch_name() {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1/"
}

function is_branch_dirty() {
    if [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit, working tree clean" ]]
    then
        return 0
    else
        return 1
    fi
}

function git_prompt() {
    git rev-parse 2> /dev/null

    if [ $? -eq 0 ]
    then
        local git_repo=get_repo_name
        local git_branch=get_git_branch_name

        local git_prompt

        if is_branch_dirty
        then
            echo -e " ðŸš§  %F{red}$(get_repo_name)/$(get_git_branch_name)%f âš’"
        else
            echo -e " âœ¨ %F{green}$(get_repo_name)/$(get_git_branch_name)%f âœ¨ ðŸš€"
        fi
    else
        echo -e ""
    fi
}

